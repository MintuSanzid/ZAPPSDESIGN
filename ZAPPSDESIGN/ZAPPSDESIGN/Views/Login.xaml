<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ZAPPSDESIGN"
             x:Class="ZAPPSDESIGN.Views.Login">


    <ContentPage.Content>
        <StackLayout Spacing = "20" VerticalOptions="CenterAndExpand">

            <Label Text="Login" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" TextColor="Maroon"/>
            <StackLayout HorizontalOptions = "FillAndExpand" >
                <Entry x:Name="entry_email" Placeholder="Email..." Keyboard="Email"></Entry>
                <Entry x:Name="entry_password" Placeholder="Password..."   IsPassword="True"></Entry>
            </StackLayout>
            <StackLayout>
                <Button Text = "Connect" x:Name="btn_login"  Clicked="Connect_clicked" BackgroundColor="Maroon" TextColor="White"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>





